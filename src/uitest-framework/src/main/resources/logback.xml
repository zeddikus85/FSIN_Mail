<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS} [%thread] %level %class.%method\(%file:%line\) %message%n</pattern>
    </encoder>
  </appender>
  <root level="info">
    <appender-ref ref="console" />
  </root>
</configuration>